{
  "subdomain": "demo",
  "ssr": [
    {
      "pathname": "/",
      "select": {
        "body": {
          "class": "landing"
        }
      }
    },
    {
      "urlRegExp": "/stories/",
      "select": {
        "body": {
          "class": "story"
        }
      }
    },
    {
      "select": {
        "header img": {
          "width": 24,
          "height": 24,
          "loading": "eager"
        },
        "header > p": {
          "tagName": "a",
          "href": "https://doc2.site"
        },
        "header ul li:last-child a": {
          "target": "_blank"
        }
      },
      "selectAll": {
        "script[src*='columns'], script[src*='stories'], script[src*='contact'], script[src*='youtube']": {
          "tagName": "template"
        },
        "web-columns-item > h2": {
          "slot": "heading"
        },
        "web-columns-item > p": {
          "slot": "text"
        },
        "web-columns-item > p:has(picture)": {
          "slot": "illustration"
        },
        "web-columns-item > p:has(a)": {
          "slot": "action"
        }
      }
    }
  ]
}
